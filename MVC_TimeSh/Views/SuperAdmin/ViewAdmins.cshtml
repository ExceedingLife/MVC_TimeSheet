@model IEnumerable<MVC_TimeSh.Models.UserRolesMenuModel>
@{
    ViewBag.Title = "View Admins";
}


<div class="row">
    <div class="col-md-10 col-lg-10">
        <div class="panel text-center">
            <div class="panel-heading panel-green">
                <h2>User Administrators</h2>
            </div>
            <div class="panel-body">

                <table class="table table-striped table-bordered
                              table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdShortened)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Role)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdShortened)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Role)
                                </td>                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-10 col-md-10 col-lg-10">
        <div class="panel panel-success text-center">
            <div class="panel-heading">
                <h4>Assign Administrators</h4>
            </div>
            <div class="panel-body text-center">
                @Html.ActionLink("Assign Admin", "AssignAdmin", "SuperAdmin",
                                  null, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
</div>