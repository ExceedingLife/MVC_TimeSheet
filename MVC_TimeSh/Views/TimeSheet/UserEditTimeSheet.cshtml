@model MVC_TimeSh.Models.TimeSheetProjectsModel
    @*TimeSheetDetailsModel*@
@{
    ViewBag.Title = "Edit TimeSheet Details";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success my-2">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Success: </strong> @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger my-2">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Error: </strong> @TempData["Error"]
    </div>
}

@*<h2>ViewBag.Title</h2>*@
<h2>Your TimeSheet Details</h2>

<div class="row justify-content-center">
    <div class="col-sm-11 col-md-11 col-lg-11">
        <div class="panel">
            <div class="panel-heading text-center">
                <h3><strong>Edit TimeSheet</strong></h3>
                <hr />
            </div>            
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3">
                        <div class="form-group">
                            @Html.Label("From Date",
                                 htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-10">
                                @Html.EditorFor(a=>a.Proj1, new { htmlAttributes =
                                 new { @class = "form-control datetimepicker" } })
                                @Html.ValidationMessageFor(model => model.Proj1,
                                 "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <div class="form-group">
                            @Html.Label("User ID",
                             htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(u=>u.IdShortened, new { @class = "form-control",
                            @readonly = "readonly" })
                        </div> 
                        @Html.HiddenFor(u => u.UserId)
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <div class="form-group">
                            @Html.Label("Date Created",
                             htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(u=>u.Proj7, new { @class = "form-control",
                            @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-3 col-lg-3">
                        @Html.HiddenFor(t => t.TimeMasterId)
                        @Html.HiddenFor(t => t.TimeDetailsId)
                    </div>
                </div>
                <div style="margin:10px"></div>
                <div class="row">
                    <div class="col-md-2 col-lg-2">
                        @Html.Label("Project Name")
                        @*@Html.LabelFor(m => m.ProjectName)*@
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.LabelFor(m => m.Sunday)
                        <br />
                        <label id="date1"></label>
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.LabelFor(m => m.Monday)
                        <br />
                        <label id="date2"></label>
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.LabelFor(m => m.Tuesday)
                        <br />
                        <label id="date3"></label>
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.LabelFor(m => m.Wednesday)
                        <br />
                        <label id="date4"></label>
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.LabelFor(m => m.Thursday)
                        <br />
                        <label id="date5"></label>
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.LabelFor(m => m.Friday)
                        <br />
                        <label id="date6"></label>
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.LabelFor(m => m.Saturday)
                        <br />
                        <label id="date7"></label>
                    </div>
                    <div class="col-md-1 col-lg-1">
                        @Html.Label("Total")
                        <br />
                        @Html.Label("Hours")@*,"Hours", null*@
                    </div>
                    <div class="col-md-2 col-lg-2">
                        @Html.Label("Description")
                    </div>
                </div>
                <div style="margin:10px"></div>
                <div class="row">
                    <div class="col-md-2 form-group">
                        @Html.DropDownListFor(p => p.ProjectId1,
                        (SelectList)ViewBag.ProjectsSelect,
                         new { @class = "form-control" })
                        @Html.ValidationMessageFor(p=>p.ProjectId1, "",
                         new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.EditorFor(d => d.P1w1d1, new { htmlAttributes = new { @class = "form-control",
                         @onblur = "Proj1Tot()", @maxlength = "2"} })
                        @Html.ValidationMessageFor(d => d.P1w1d1, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.EditorFor(d => d.P1w1d2, new { htmlAttributes = new { @class = "form-control",
                         @onblur = "Proj1Tot()", @maxlength = "2"} })
                        @Html.ValidationMessageFor(d => d.P1w1d2, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.EditorFor(d => d.P1w1d3, new { htmlAttributes = new { @class = "form-control",
                         @onblur = "Proj1Tot()", @maxlength = "2"} })
                        @Html.ValidationMessageFor(d => d.P1w1d3, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.EditorFor(d => d.P1w1d4, new { htmlAttributes = new { @class = "form-control",
                         @onblur = "Proj1Tot()", @maxlength = "2"} })
                        @Html.ValidationMessageFor(d => d.P1w1d4, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.EditorFor(d => d.P1w1d5, new { htmlAttributes = new { @class = "form-control",
                         @onblur = "Proj1Tot()", @maxlength = "2"} })
                        @Html.ValidationMessageFor(d => d.P1w1d5, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.EditorFor(d => d.P1w1d6, new { htmlAttributes = new { @class = "form-control",
                         @onblur = "Proj1Tot()", @maxlength = "2"} })
                        @Html.ValidationMessageFor(d => d.P1w1d6, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.EditorFor(d => d.P1w1d7, new { htmlAttributes = new { @class = "form-control",
                         @onblur = "Proj1Tot()", @maxlength = "2"} })
                        @Html.ValidationMessageFor(d => d.P1w1d7, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-1 form-group">
                        @Html.TextBoxFor(d=>d.ProjTotal1, new { @class="form-control",
                        @readonly ="readonly", @maxlength = "2", @id="p1tot" })
                    </div>
                    <div class="col-md-2 form-group">
                        @Html.TextAreaFor(d => d.ProjDesc1, new { @class="form-control",
                        @maxlength ="50", @rows="1" })
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <input type="submit" class="btn btn-success" />
                @Html.ActionLink("Cancel", "UserTimeSheets", new { id = Model.UserId }, new { @class = "btn btn-danger"})
            </div>
            }            
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}