@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryui")
    @Styles.Render("~/Content/jqueryuitime")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <a class="navbar-brand col-sm-3 col-md-2 col-lg-2" href="#">
                TimeSheet
            </a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
        </div>
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <!-- SIDE STICKY NAVIGATION BAR -->
    <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">

                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Super Admin Dashboard", "Dashboard", "SuperAdmin")
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Admin Dashboard", "Dashboard", "Admin")
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("User Dashboard", "UserDashboard", "Users")
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Role Manager", "RoleManager", "SuperAdmin")
                        </li>
                        <li>
                            @Html.ActionLink("Update Password", "ChangePassword", "Users")
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Add Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Reset Password</a>
                        </li>
                    }

                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">Super Admin Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Create Admin</a>
                        </li>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">Admin Dashboard</a>
                        </li>
                    }
                    else if (User.IsInRole("User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">User Dashboard</a>
                        </li>
                        <li>
                            @Html.ActionLink("Update Password", "ChangePassword", "Users")
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="#">Export All TimeSheets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Export All Expenses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Push Notification</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Extra</a>
                    </li>
                    @if (Request.IsAuthenticated) { }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">Not a valid user</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <div class="col-md-9 col-lg-10 px-4 ml-sm-auto container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET TimeSheet Application</p>
            </footer>
        </div>
    </div>
    @*<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/i18n/jquery-ui-timepicker-addon-i18n.min.js">
      </script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/bundles/jqueryui")
    <script>
        $(function () {
            // DATEPICKER JQUERY ADDITION
            $(".datepicker").datepicker({
                dateFormat: "dd/mm/yy",
                changeYear: true,
                shownOn: "button"
            }).css("display", "inline-block")
                .next("button").button({
                    icons: { primary: "ui-icon-calendar" },
                    label: "Select a Date",
                    text: false
                });
            // DATETIMEPICKER JQUERY ADDITION
            $(".datetimepicker").datetimepicker({
                dateFormat: 'dd/MM/yyyy',
                timeFormat: 'hh: mm: ss',
                timeInput: true,
            });

        })
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
